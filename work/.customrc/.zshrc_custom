# .bashrc

# small hack to see if we are on a work pc or not
if [[ -d /opt/xkl/env/1.2/bin ]]; then
  # User specific environment and startup programs
  PATH=/opt/xkl/env/1.2/bin:$PATH
  # Support new build environment
  PATH=/opt/xkl/tools:$PATH
  PATH=/opt/xkl/tools/bin:$PATH
  export LD_LIBRARY_PATH=$HOME/.scarpenter/lib
  export PKG_CONFIG_PATH=$HOME/.scarpenter/lib/pkgconfig
fi

if [[ -d $HOME/.scarpenter/python36 ]]; then
  PATH=$HOME/.scarpenter/python36/bin:$PATH
fi

