# All relevant aliases for Linux

# Default to Python 3
# alias python="python3"

# Always display color
alias ls="ls --color=auto"

# Display directories
alias ld="ls -d */"

# Display hidden files
alias lh="ls -a | grep '^\.'"

# Display files with details
alias ll="ls -lh"

# Prefer no-window version
alias emacs="emacs -nw"

# Use VIM, not VI
alias vi="vim"
